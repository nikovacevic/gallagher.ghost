{{!< default}}
{{#post}}
  <main class="post">
    {{#if feature_image}}
      <figure class="post-full-image" style="
        background-image: url({{feature_image}});
        background-size: cover;
        background-position: center;
        height: 500px;
        width: 100vw;"
      >
      </figure>
    {{/if}}
    <div class="container post-container {{#unless feature_image}}no-image{{/unless}}">
      <article class="post {{post_class}}">
        <h1 class="title" style="text-align: center; margin: 0.4em 0;">{{title}}</h1>
        <section class="meta" style="text-align: center; margin: 0.6em 0; text-transform: uppercase;">
          <time class="date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
        </section>
        <section class="content">
          {{content}}
        </section>
      </article>
    </div>
  </main>
  {{!-- Links to Previous/Next posts --}}
  <aside class="read-next outer">
      <div class="inner">
          <div class="read-next-feed">
              {{#if primary_tag}}
              {{#get "posts" filter="tags:{{primary_tag.slug}}+id:-{{id}}" limit="3" as |related_posts|}}
                  {{#if related_posts}}
                  <article class="read-next-card"
                      {{#if ../primary_tag.feature_image}}
                          style="background-image: url({{../primary_tag.feature_image}})"
                      {{else}}
                          {{#if @blog.cover_image}}
                              style="background-image: url({{@blog.cover_image}})"{{/if}}
                      {{/if}}
                  >
                      <header class="read-next-card-header">
                          <small class="read-next-card-header-sitetitle">&mdash; {{@blog.title}} &mdash;</small>
                          {{#../primary_tag}}
                          <h3 class="read-next-card-header-title"><a href="{{url}}">{{name}}</a></h3>
                          {{/../primary_tag}}
                      </header>
                      <div class="read-next-divider">{{> "icons/infinity"}}</div>
                      <div class="read-next-card-content">
                          <ul>
                              {{#foreach related_posts}}
                              <li><a href="{{url}}">{{title}}</a></li>
                              {{/foreach}}
                          </ul>
                      </div>
                      <footer class="read-next-card-footer">
                          <a href="{{#../primary_tag}}{{url}}{{/../primary_tag}}">{{plural meta.pagination.total empty='No posts' singular='% post' plural='See all % posts'}} â†’</a>
                      </footer>
                  </article>
                  {{/if}}
              {{/get}}
              {{/if}}
              {{!-- If there's a next post, display it using the same markup included from - partials/post-card.hbs --}}
              {{#next_post}}
                  {{> "post-card"}}
              {{/next_post}}
              {{!-- If there's a previous post, display it using the same markup included from - partials/post-card.hbs --}}
              {{#prev_post}}
                  {{> "post-card"}}
              {{/prev_post}}
          </div>
      </div>
  </aside>
{{/post}}
