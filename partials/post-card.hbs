<article class="post-card {{post_class}} {{#unless feature_image}}no-image{{/unless}}">
  {{#if feature_image}}
      <a class="post-card-image-link" href="{{url}}">
          <div class="post-card-image" style="background-image: url({{feature_image}})"></div>
      </a>
  {{/if}}
  <a class="post-card-link" href="{{url}}" style="height: 100%; display: flex; flex-flow: column; justify-content: space-between;">
    <h2 class="title">{{title}}</h2>
    <p class="date">{{date dateToFormat format="MMMM DD, YYYY"}}</p>
  </a>
</article>
